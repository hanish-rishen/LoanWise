{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - relaxed for CI */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/vite-env.d.ts",
    "src/main.tsx",
    "src/App.tsx",
    "src/components/Header.tsx",
    "src/components/Sidebar.tsx",
    "src/components/ChatInterface.tsx",
    "src/components/VoiceMode.tsx",
    "src/components/LoanApplicationsPage.tsx",
    "src/components/LoginPage.tsx",
    "src/components/ToastContainer.tsx",
    "src/components/TranscriptDrawer.tsx",
    "src/components/VoiceSettings.tsx",
    "src/services/loanApplicationService.ts",
    "src/services/toastService.ts",
    "src/index.css"
  ]
}
