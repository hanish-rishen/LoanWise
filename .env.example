# LoanWise Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/loanwise"
NEON_DATABASE_URL="postgresql://username:password@hostname.neon.tech/database"

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key_here"

# API Keys
VITE_GROQ_API_KEY="gsk_your_groq_api_key_here"
OPENAI_API_KEY="sk-your_openai_api_key_here"

# Application Configuration
VITE_APP_URL="http://localhost:5173"
NODE_ENV="development"

# Voice & Speech Services
VITE_ENABLE_VOICE_MODE="true"
VITE_DEFAULT_VOICE="en-US"
VITE_SPEECH_RECOGNITION_LANG="en-US"

# Loan Configuration
VITE_MAX_LOAN_AMOUNT="10000000"
VITE_MIN_CREDIT_SCORE="300"
VITE_MAX_CREDIT_SCORE="850"

# Security
JWT_SECRET="your_jwt_secret_here"
ENCRYPTION_KEY="your_encryption_key_here"

# External Services
VITE_ANALYTICS_ID="your_analytics_id_here"
SENTRY_DSN="your_sentry_dsn_here"

# Build Configuration
VITE_BUILD_VERSION="1.0.0"
VITE_BUILD_TIMESTAMP=""
