# LoanWise Ansible Inventory - Production

# Application Servers
[app_servers]
# Add your EC2 instances running the Docker containers
# Format: <private-ip-or-hostname>
# Example:
# 10.0.1.10
# 10.0.1.11
# ec2-app-1.example.com
# ec2-app-2.example.com

# Monitoring Servers
[monitoring]
# Add your Prometheus/Grafana server
# Example:
# 10.0.1.20
# ec2-monitoring.example.com

# Production Group
[production:children]
app_servers
monitoring

# Common variables for production environment
[production:vars]
ansible_user=ec2-user
ansible_ssh_private_key_file=~/.ssh/loanwise-prod.pem
ansible_python_interpreter=/usr/bin/python3

# Environment variables
environment=production
database_url={{ lookup('env', 'DATABASE_URL') }}
docker_registry=your-registry.com
